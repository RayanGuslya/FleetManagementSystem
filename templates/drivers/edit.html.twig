{% extends 'base.html.twig' %}

{% block body %}
<h2>Редактировать водителя</h2>

<form action="{{ path('drivers_edit', {id: driver.id}) }}" method="POST">
    <label>Имя:</label><br>
    <input type="text" name="name" value="{{ driver.name }}"><br><br>

    <label>Категория лицензии:</label><br>
    <input type="text" name="licenseCategory" value="{{ driver.licenseCategory }}"><br><br>

    <label>Контактные данные:</label><br>
    <input type="text" name="contact" value="{{ driver.contact }}"><br><br>

    <button type="submit">Сохранить</button>
</form>

<a href="{{ path('drivers_list') }}">⬅ Назад</a>
{% endblock %}
