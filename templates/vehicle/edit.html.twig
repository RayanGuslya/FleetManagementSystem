{% extends 'base.html.twig' %}

{% block title %}Редактировать автомобиль{% endblock %}

{% block body %}
<h2>Редактировать автомобиль #{{ vehicle.id }}</h2>

<form method="POST">

    <label>VIN:</label><br>
    <input type="text" name="VIN" value="{{ vehicle.VIN }}" required><br><br>

    <label>Номер:</label><br>
    <input type="text" name="plateNumber" value="{{ vehicle.plateNumber }}" required><br><br>

    <label>Модель:</label><br>
    <input type="text" name="model" value="{{ vehicle.model }}" required><br><br>

    <label>Статус:</label><br>
    <input type="text" name="status" value="{{ vehicle.status }}" required><br><br>

    <label>Пробег:</label><br>
    <input type="number" name="mileage" value="{{ vehicle.mileage }}" required><br><br>

    <button type="submit">Сохранить изменения</button>
</form>

<br>
<a href="{{ path('vehicle_index') }}">⬅ Назад</a>
{% endblock %}
