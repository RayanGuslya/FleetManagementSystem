{% extends 'base.html.twig' %}

{% block body %}
<h1>Создать маршрут</h1>

<form method="POST">
    <h3>Начальная точка</h3>
    <label>Широта (Lat):</label><br>
    <input type="number" step="0.000001" name="startLat" value="{{ route.startLat|default('') }}" required><br><br>

    <label>Долгота (Lng):</label><br>
    <input type="number" step="0.000001" name="startLng" value="{{ route.startLng|default('') }}" required><br><br>

    <h3>Конечная точка</h3>
    <label>Широта (Lat):</label><br>
    <input type="number" step="0.000001" name="endLat" value="{{ route.endLat|default('') }}" required><br><br>

    <label>Долгота (Lng):</label><br>
    <input type="number" step="0.000001" name="endLng" value="{{ route.endLng|default('') }}" required><br><br>

    <button type="submit">{{ route is defined ? 'Сохранить' : 'Создать' }}</button>
</form>


<br>
<a href="{{ path('route_index') }}">⬅ Назад</a>

{% endblock %}
