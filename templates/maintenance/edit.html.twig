{% extends 'base.html.twig' %}

{% block body %}
<h2>Редактировать запись ТО</h2>

<form action="{{ path('maintenance_edit', {id: record.id}) }}" method="POST">

    <label>Дата:</label><br>
    <input type="text" name="date" value="{{ record.date ?? '' }}"><br><br>

    <label>Тип работы:</label><br>
    <input type="text" name="workType" value="{{ record.workType ?? '' }}"><br><br>

    <label>Стоимость:</label><br>
    <input type="number" name="cost" step="0.01" value="{{ record.cost ?? '' }}"><br><br>

    <label>Автомобиль:</label><br>
    <select name="vehicle">
        {% for v in vehicles %}
            <option value="{{ v.id }}"
                {% if record.vehicle and v.id == record.vehicle.id %}selected{% endif %}
            >
                {{ v.model ?? ('Авто #' ~ v.id) }}
            </option>
        {% endfor %}
    </select>
    <br><br>

    <button type="submit">Сохранить</button>

</form>

<a href="{{ path('maintenance_list') }}">⬅ Назад</a>
{% endblock %}
